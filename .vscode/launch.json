{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Jest Tests",
        "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
        "args": ["--runInBand"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "cwd": "${workspaceFolder}",
        "runtimeArgs": ["--inspect-brk"],
        "disableOptimisticBPs": true,
        "env": {
          "NODE_ENV": "test"
        },
        "sourceMaps": true
      }
    ]
  }